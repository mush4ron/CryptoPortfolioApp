<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingBottom="16dp"
    android:background="@drawable/item_ranking_list_shape"
    android:backgroundTint="@color/ranking_list_item_background">

    <TextView
        android:id="@+id/tv_item_portfolio_asset_difference"
        style="@style/Caption1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="+$10,000.01"
        android:textColor="@color/good_profit_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_item_portfolio_asset_current_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_portfolio_asset_subtitle3" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_position"
        style="@style/Caption2"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="200"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_symbol"
        style="@style/Caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="BTC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_portfolio_asset_position"
        app:layout_constraintStart_toEndOf="@+id/tv_item_portfolio_asset_position"
        app:layout_constraintTop_toTopOf="@+id/tv_item_portfolio_asset_position" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_change_good"
        style="@style/GoodChange24"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="-24.39%"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_invested_price"
        style="@style/Caption1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="$20,949.56"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_portfolio_asset_current_price"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_portfolio_asset_subtitle1" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_current_price"
        style="@style/Caption1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="$30,949.56"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_portfolio_asset_difference"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_item_portfolio_asset_invested_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_portfolio_asset_subtitle2" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_subtitle1"
        style="@style/Caption2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Вложено"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_portfolio_asset_subtitle2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_portfolio_asset_symbol" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_subtitle2"
        style="@style/Caption2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Получено"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_portfolio_asset_subtitle3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_item_portfolio_asset_subtitle1"
        app:layout_constraintTop_toTopOf="@+id/tv_item_portfolio_asset_subtitle1" />

    <TextView
        android:id="@+id/tv_item_portfolio_asset_subtitle3"
        style="@style/Caption2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="P/L"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_item_portfolio_asset_subtitle2"
        app:layout_constraintTop_toTopOf="@+id/tv_item_portfolio_asset_subtitle1" />

</androidx.constraintlayout.widget.ConstraintLayout>