<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="Title1" parent="BaseText">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="Title2" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="lineHeight">23sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="Caption1" parent="BaseText">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="Caption2" parent="BaseText">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>


    <!-- Item Ranking List -->

    <style name="GoodChange24" parent="Caption2">
        <item name="android:background">@drawable/item_ranking_list_change24_shape</item>
        <item name="backgroundTint">@color/good_change_background</item>
        <item name="android:textColor">@color/good_change_text</item>
    </style>

    <style name="BadChange24" parent="Caption2">
        <item name="android:background">@drawable/item_ranking_list_change24_shape</item>
        <item name="backgroundTint">@color/bad_change_background</item>
        <item name="android:textColor">@color/bad_change_text</item>
    </style>


    <!-- PortfolioFragment -->

    <style name="GoodChange" parent="GoodChange24">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="BadChange" parent="BadChange24">
        <item name="android:background">@drawable/item_ranking_list_change24_shape</item>
        <item name="backgroundTint">@color/bad_change_background</item>
        <item name="android:textColor">@color/bad_change_text</item>
    </style>


    <!-- Buttons -->

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="backgroundTint">@color/base_button</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RedButton" parent="BaseButton">
        <item name="backgroundTint">@color/red_button</item>
    </style>

    <style name="PurpleButton" parent="BaseButton">
        <item name="backgroundTint">@color/purple_button</item>
    </style>


    <!-- Bottom Menu -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_menu_text</item>
        <item name="itemIconTint">@color/bottom_menu_icon</item>
    </style>
</resources>