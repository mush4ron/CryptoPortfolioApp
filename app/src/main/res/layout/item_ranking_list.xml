<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/item_ranking_list_shape"
    android:backgroundTint="@color/ranking_list_item_background">

    <TextView
        android:id="@+id/tv_item_ranking_list_position"
        style="@style/Caption2"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="200"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_ranking_list_symbol"
        style="@style/Caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="BTC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_ranking_list_position"
        app:layout_constraintStart_toEndOf="@+id/tv_item_ranking_list_position"
        app:layout_constraintTop_toTopOf="@+id/tv_item_ranking_list_position" />

    <TextView
        android:id="@+id/tv_item_ranking_list_change24_bad"
        style="@style/BadChange"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="-24.39%"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_item_ranking_list_change24_good"
        style="@style/GoodChange"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="-24.39%"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_item_ranking_list_price"
        style="@style/Title2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="$30,949.56"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>